<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao.error_notifier.notifier.default_mailer.class">Elao\ErrorNotifierBundle\Notifier\MailerNotifier</parameter>
    </parameters>

    <services>
        <service id="elao.error_notifier.notifier.default_mailer" class="%elao.error_notifier.notifier.default_mailer.class%">
            <argument type="service" id="mailer" />
            <argument type="service" id="templating" />
            <argument />    <!-- to -->
            <argument />    <!-- from -->
            <tag name="elao.error_notifier.notifier" alias="default_mailer" />
        </service>
    </services>

</container>
