<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao.error_notifier.matcher.class">Symfony\Component\HttpFoundation\RequestMatcher</parameter>

        <parameter key="elao.error_notifier.exception_listener.class">Elao\ErrorNotifierBundle\Listener\ExceptionListener</parameter>
        <parameter key="elao.error_notifier.register_error_handlers_listener.class">Elao\ErrorNotifierBundle\Listener\RegisterErrorHandlersListener</parameter>

        <parameter key="elao.error_notifier.decision_manager.request_match.class">Elao\ErrorNotifierBundle\Request\RequestMatchDecisionManager</parameter>
        <parameter key="elao.error_notifier.exception_handler.class">Elao\ErrorNotifierBundle\Handler\ExceptionHandler</parameter>
        <parameter key="elao.error_notifier.notification_handler.class">Elao\ErrorNotifierBundle\Handler\NotificationHandler</parameter>
        <parameter key="elao.error_notifier.notifier_collection.class">Elao\ErrorNotifierBundle\Notifier\NotifierCollection</parameter>
    </parameters>

    <services>
        <service id="elao.error_notifier.exception_listener" class="%elao.error_notifier.exception_listener.class%">
            <argument type="service" id="elao.error_notifier.exception_handler" />
            <tag name="kernel.event_listener" event="kernel.exception" method="onKernelException" priority="0" />
            <tag name="kernel.event_listener" event="console.exception" method="onConsoleException" priority="0" />
        </service>

        <service id="elao.error_notifier.register_error_handlers_listener" class="%elao.error_notifier.register_error_handlers_listener.class%">
            <argument type="service" id="elao.error_notifier.exception_handler" />
            <!-- tag added in extension if handlePHPErrors or handlePHPWarnings
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="0" />
            <tag name="kernel.event_listener" event="console.command" method="onConsoleCommand" priority="0" />
            -->
        </service>


        <service id="elao.error_notifier.exception_handler" class="%elao.error_notifier.exception_handler.class%">
            <argument type="service" id="elao.error_notifier.decision_manager" />
            <argument type="service" id="elao.error_notifier.notification_handler" />
        </service>

        <service id="elao.error_notifier.notification_handler" class="%elao.error_notifier.notification_handler.class%">
            <argument type="service" id="elao.error_notifier.notifier_collection" />
        </service>

        <service id="elao.error_notifier.notifier_collection" class="%elao.error_notifier.notifier_collection.class%">
            <argument />    <!-- enabled_notifiers -->
        </service>

        <service id="elao.error_notifier.decision_manager.request_match" class="%elao.error_notifier.decision_manager.request_match.class%" />
    </services>

</container>
