{
    "name":        "elao/error-notifier-bundle",
    "type":        "symfony-bundle",
    "description": "This bundle send html mail when an error appear",
    "keywords":    ["elao", "error", "notifier", "bundle"],
    "homepage":    "http://github.com/Elao/ErrorNotifierBundle",
    "license":     "MIT",

    "authors": [
        {
            "name": "Elao Team",
            "homepage": "http://www.elao.com"
        },
        {
            "name": "Contributors",
            "homepage": "http://github.com/Elao/ErrorNotifierBundle/contributors"
        }
    ],

    "require": {
        "php":                      ">=5.3.2",
        "beberlei/assert":          "~2",
        "symfony/framework-bundle": "~2.3",
        "symfony/console":          "~2.3"
    },

    "require-dev": {
        "cleentfaar/slack":         "~0.17",
        "matthiasnoback/symfony-dependency-injection-test": "~0.7",
        "phpunit/phpunit":          "5.0.*",
        "swiftmailer/swiftmailer":  "~5.0",
        "twig/twig":                "~1.23|~2.0"
    },

    "suggest": {
        "cleentfaar/slack": "For use with default slack notifier",
        "swiftmailer/swiftmailer": "For use with default mail notifier",
        "twig/twig": "For use with default mail notifier"
    },

    "autoload": {
        "psr-4": {
            "Elao\\ErrorNotifierBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
